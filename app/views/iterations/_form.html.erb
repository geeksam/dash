  <% if @iteration.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@iteration.errors.count, "error") %> prohibited this iteration from being saved:</h2>

      <ul>
      <% @iteration.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <% if @sprint.blank? %>
    <div class="field">
      <%= f.label :sprint %><br />
      <%= f.select :sprint, Sprint.all.map { |e| [e.name, e.id] } %>
    </div>
  <% else %>
    <div class="field">
      <%= f.label :sprint %>: <%= @sprint.name %>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :number %><br />
    <%= f.text_field :number %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
